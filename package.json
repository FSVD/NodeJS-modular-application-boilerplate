{
  "name": "node-project-boilerplate",
  "version": "1.0.0",
  "description": "Startup architecture for multiprocess node project",
  "private": true,
  "main": "index.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon --exec babel-node index.js",
    "test": "cross-env NODE_ENV=test mocha --opts ./mocha.opts --watch --require @babel/register",
    "coverage": "cross-env NODE_ENV=test nyc mocha --opts ./mocha.opts --require @babel/register",
    "start": "cross-env NODE_ENV=production babel-node index.js"
  },
  "pre-commit": [
    "test"
  ],
  "author": "Fabio Schettino",
  "license": "ISC",
  "dependencies": {
    "@hapi/joi": "^15.1.0",
    "cross-env": "^5.2.0",
    "dotenv": "^8.0.0",
    "express": "^4.17.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/node": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "babel-eslint": "^10.0.2",
    "babel-plugin-dynamic-import-node-babel-7": "^2.0.7",
    "chai": "^4.2.0",
    "eslint": "^6.0.1",
    "eslint-config-airbnb-base": "^13.2.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-html": "^6.0.0",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-prettier": "^3.1.0",
    "mocha": "^6.2.0",
    "nodemon": "^1.19.1",
    "nyc": "^14.1.1",
    "pre-commit": "^1.2.2",
    "prettier": "^1.18.2"
  }
}
